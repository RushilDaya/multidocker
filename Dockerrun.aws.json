{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"rushildayabme/multi-client",
            "hostname":"client",
            "essential":false
        },
        {
            "name":"server",
            "image":"rushildayabme/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name":"worker",
            "image":"rushildayabme/multi-worker",
            "hostname":"worker",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"rushildayabme/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": [
                "client",
                "server"
            ]
        }
    ]
}